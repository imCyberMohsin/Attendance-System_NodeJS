<!-- View Attendance Report EJS -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Report</title>
    <link rel="stylesheet" href="../css/viewReport.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="shortcut icon" href="../images/report-favicon.png" type="image/x-icon">
</head>

<body>
    <div class="container">
        <nav>
            <ul>
                <li><a href="#" class="logo">
                        <img src="https://cdn2.iconfinder.com/data/icons/web-solid/32/user-512.png">
                        <span class="nav-item">Admin</span>
                    </a></li>
                <li><a href="#">
                        <i class="fas fa-menorah"></i>
                        <span class="nav-item">Dashboard</span>
                    </a></li>
                <li><a href="#">
                        <i class="fas fa-comment"></i>
                        <span class="nav-item">Message</span>
                    </a></li>
                <li><a href="#">
                        <i class="fas fa-database"></i>
                        <span class="nav-item">Report</span>
                    </a></li>
                <li><a href="#">
                        <i class="fas fa-chart-bar"></i>
                        <span class="nav-item">Attendance</span>
                    </a></li>
                <li><a href="#">
                        <i class="fas fa-cog"></i>
                        <span class="nav-item">Setting</span>
                    </a></li>
                <li><a href="/login" class="logout">
                        <i class="fas fa-sign-out-alt"></i>
                        <span class="nav-item">Log out</span>
                    </a></li>
            </ul>
        </nav>
        <section class="main">
            <div class="main-top">
                <h1>Attendance</h1>
            </div>
            <section class="attendance">
                <div class="attendance-list">
                    <h1>Attendance List</h1>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Depart</th>
                                <th>Date & Time</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (const oneEntry of attendanceData) { %>
                                    <tr>
                                        <td><%= oneEntry.id %></td>
                                        <td><%= oneEntry.name %></td>
                                        <td><%= oneEntry.department %></td>
                                        <td><%= oneEntry.dateTime %></td>
                                        <td>
                                            <form action="/deleteEntry" method="POST">
                                                <input type="hidden" name="entryId" value="<%= oneEntry.id %>"> <!-- This is a hidden field which is storing entry ID to be deleted. -->
                                                <button type="submit">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                <% } %>
                        </tbody>
                    </table>
                </div>
            </section>
        </section>
    </div>

    <a class="homeBtn" href="/home">HOME</a>

    <!-- <script defer src="../js/viewReport.js"></script> -->
</body>

</html>